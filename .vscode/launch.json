  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Run GCFT",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/gcft.py",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Profile GCFT",
      "type": "python",
      "request": "launch",
      "module": "cProfile",
      "console": "integratedTerminal",
      "justMyCode": true,
      "args": [
        "-o", "profileresults.prof", "${workspaceFolder}/gcft.py",
      ]
    },
  ]
}